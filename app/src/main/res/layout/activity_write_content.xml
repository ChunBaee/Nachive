<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="view"
            type="com.chuno.nachive.write.WriteActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/set_profile_background_color">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/write_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_x"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{view.getDate}"
                    android:textColor="@color/set_profile_text_color"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_save_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/write_toolbar_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/write_content_divider_color"
                app:layout_constraintTop_toBottomOf="@id/write_toolbar" />

            <TextView
                android:id="@+id/write_txt_select_feel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:text="오늘의 기분은?"
                android:textColor="@color/set_profile_text_color"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/write_toolbar_divider" />

            <View
                android:id="@+id/write_select_feel_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/write_content_divider_color"
                app:layout_constraintTop_toBottomOf="@id/write_txt_select_feel" />

            <EditText
                android:id="@+id/write_edt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="오늘은 어떤 일이 있으셨나요?"
                android:textColor="@color/set_profile_text_color"
                android:textColorHint="@color/set_profile_save_before_finish"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/write_select_feel_divider" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/write_rv_gallery_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                tools:listitem="@layout/item_write_rv_image"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/write_edt_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/set_profile_background_color"
                app:cardElevation="5dp"
                app:layout_constraintWidth_percent="0.97"
                app:layout_constraintTop_toBottomOf="@id/write_rv_gallery_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/write_card_book_image"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_launcher_background"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintWidth_percent="0.22"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />

                    <TextView
                        android:id="@+id/write_card_book_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불편한 편의점"
                        android:textColor="@color/set_profile_text_color"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        app:layout_constraintHorizontal_bias="0.13"
                        app:layout_constraintVertical_bias="0.15"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/write_card_book_image"
                        app:layout_constraintRight_toRightOf="parent" />

                    <TextView
                        android:id="@+id/write_card_writer_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="저자"
                        android:textSize="11sp"
                        android:layout_marginTop="8sp"
                        android:textColor="@color/write_card_writer_key_color"
                        app:layout_constraintTop_toBottomOf="@id/write_card_book_title"
                        app:layout_constraintStart_toStartOf="@id/write_card_book_title" />

                    <TextView
                        android:id="@+id/write_card_txt_writer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="김호연"
                        android:textSize="11sp"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/write_card_writer_value_color"
                        app:layout_constraintTop_toTopOf="@id/write_card_writer_key"
                        app:layout_constraintBottom_toBottomOf="@id/write_card_writer_key"
                        app:layout_constraintStart_toEndOf="@id/write_card_writer_key" />

                    <TextView
                        android:id="@+id/write_card_publish_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출판"
                        android:textSize="11sp"
                        android:textColor="@color/write_card_writer_key_color"
                        app:layout_constraintTop_toBottomOf="@id/write_card_writer_key"
                        app:layout_constraintStart_toStartOf="@id/write_card_writer_key" />

                    <TextView
                        android:id="@+id/write_card_txt_publish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나무옆의자"
                        android:textSize="11sp"
                        android:textColor="@color/write_card_writer_value_color"
                        app:layout_constraintTop_toTopOf="@id/write_card_publish_key"
                        app:layout_constraintBottom_toBottomOf="@id/write_card_publish_key"
                        app:layout_constraintStart_toStartOf="@id/write_card_txt_writer" />

                    <TextView
                        android:id="@+id/write_card_sell_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="발매"
                        android:textSize="11sp"
                        android:textColor="@color/write_card_writer_key_color"
                        app:layout_constraintTop_toBottomOf="@id/write_card_publish_key"
                        app:layout_constraintStart_toStartOf="@id/write_card_publish_key" />

                    <TextView
                        android:id="@+id/write_card_txt_sell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2021.04.20"
                        android:textSize="11sp"
                        android:textColor="@color/write_card_writer_value_color"
                        app:layout_constraintTop_toTopOf="@id/write_card_sell_key"
                        app:layout_constraintBottom_toBottomOf="@id/write_card_sell_key"
                        app:layout_constraintStart_toStartOf="@id/write_card_txt_publish" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toBottomOf="parent" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/write_content_divider_color" />

            <ImageView
                android:id="@+id/write_btn_movie"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/icon_input_movie"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <ImageView
                android:id="@+id/write_btn_book"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_input_book"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/write_btn_movie"
                app:layout_constraintBottom_toBottomOf="@id/write_btn_movie"
                app:layout_constraintEnd_toStartOf="@id/write_btn_movie" />
            
            <ImageView
                android:id="@+id/write_btn_gallery"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/icon_input_image"
                app:layout_constraintTop_toTopOf="@id/write_btn_movie"
                app:layout_constraintBottom_toBottomOf="@id/write_btn_movie"
                app:layout_constraintEnd_toStartOf="@id/write_btn_book" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>